<div class="container">
  <div class="row">
    <div class="col s12 m8 offset-m2">

      {{#md-card title='WasteNot Administration'}}
        {{#md-card-content}}
          {{#admin-info as |a|}}
            Thanks for logging in <b>{{a.email}}</b>
          {{/admin-info}}
          {{#md-card-action}}
            {{md-btn-submit
              action = (route-action 'logout')
              text   = 'Logout'
            }}
          {{/md-card-action}}
        {{/md-card-content}}
      {{/md-card}}

    </div>
  </div>
</div>
