<div class='row'>
  <div class='col s12 m8 offset-m2'>
    {{#md-card title='Service Details'}}
      {{#md-card-content}}
        <div class='row'>
          {{md-input
            class='col s12 m6'
            type='tel'
            label='Phone'
            value=model.phone
            validate=true
          }}
        </div>

        <div class='row'>
          {{md-input
            class='col s12 m4'
            label='House number'
            value=model.address.house
            validate=true
          }}
          {{md-input
            class='col s12 m4'
            label='Street'
            value=model.address.street
            validate=true
          }}
          {{md-input
            class='col s12 m4'
            label='Apt number'
            value=model.address.apt
            validate=true
          }}
        </div>

        <div class='row'>
          {{md-input
            class='col s12 m4'
            label='City'
            value=model.address.city
            validate=true
          }}
          {{md-input
            class='col s12 m4'
            label='State'
            value=model.address.state
            validate=true
          }}
          {{md-input
            class='col s12 m4'
            label='Zip'
            value=model.address.zip
            validate=true
          }}
        </div>

      {{/md-card-content}}

      <div class='center-align'>
        {{md-btn-submit
          action='doSubmit'
          class='submit-button'
          text='Submit'
        }}
      </div>
    {{/md-card}}
  </div>
</div>
